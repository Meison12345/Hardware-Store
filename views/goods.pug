include header


div.container.container-items.center
    div.goods
        h2(class='goods-title') #{goods[0]['name']}
    div.goods-img
        img(src="img/"+goods[0]['image'], alt=goods[0]['image'].slice(0,-5))
    h2.goods-header ОПИСАНИЕ
    div.price-btn
        p.goods-desc #{goods[0]['description']}
        span(class="success") Цена: #{goods[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} ₽
        button(
            class="buttom-success add-to-cart"
            data-goods_id=goods[0]['id']            
            ) В КОРЗИНУ
    include nav
include footer